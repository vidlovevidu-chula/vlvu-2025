---
import { CarouselComponent } from "@/components/Carousel";
import Layout from "../layouts/Layout.astro";
import WebTitle from "@/components/WebTitle.astro";
import "@/styles/global.css";
import Image from "astro/components/Image.astro";
import Minigames from "@/components/Minigames.astro";
import Navbar from "@/components/Navbar.astro";
---

<Layout title="Home | VidLoveVidYou 2025">
  <main class="min-h-screen bg-home">
    <div class="flex flex-col items-center justify-center h-auto font-Yeseva">
      <!-- Web Title -->
      <div class="flex h-[125px] w-[324px] mt-[75px] z-10">
        <WebTitle />
      </div>

      <!-- Carousel -->
      <div
        class="flex w-full h-auto mt-20 items-center justify-center"
      >
        <CarouselComponent client:load />
      </div>

      <!-- Register Button -->
      <div class="flex w-3/4 h-auto mt-10 items-center justify-center">
        <a href="https://www.instagram.com/min.taadaa/" target="_blank">
          <Image
            src="/images/home/register_1.webp"
            width={400}
            height={238}
            alt="Register"
            title="Register"
          />
        </a>
      </div>

      <!-- Mini games -->
      <div class="flex w-full mt-10 h-auto">
        <Minigames />
      </div>

      <!-- Quote -->
      <div class="flex w-full h-auto mt-16 items-center justify-center">
        <Image
          src="/images/home/quote.webp"
          width={400}
          height={238}
          alt="Quote"
          title="Quote"
        />
      </div>

      <!-- Larnchak x Larngear -->
      <div
        class="flex flex-col w-full h-auto my-[95px] items-center justify-center gap-2"
      >
        <Image
          src="/images/location.webp"
          width={354}
          height={221}
          alt="Larnchak x Larngear"
          title="Larnchak x Larngear"
          class:list="mx-8 bg-[#DCDFF0] text-center items-center justify-center"
        />
        <div class="flex items-center justify-center space-x-6">
          <!-- First Column -->
          <div class="text-center">
            <p class="text-sm font-semibold">Larnchak</p>
            <p class="text-sm font-bold font-Atasanee">ลานจักร</p>
          </div>
          <!-- Separator -->
          <p class="text-2xl font-bold">×</p>
          <!-- Second Column -->
          <div class="text-center">
            <p class="text-sm font-semibold">Larngear</p>
            <p class="text-sm font-bold font-Atasanee">ลานเกียร์</p>
          </div>
        </div>
      </div>

      <!-- Sponsors -->
       

      <!-- Footer -->
      <div class="flex w-full h-auto items-center justify-center">
        <Navbar />
      </div>
    </div>
  </main>
</Layout>
