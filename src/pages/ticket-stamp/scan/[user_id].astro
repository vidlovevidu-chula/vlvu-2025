---
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/ScannerButton.astro";
import ScannerBox from "../../../components/QRScanner.astro";
const { user_id } = Astro.params;
---

<Layout title="VLVU">
  <div class="container">
    <ScannerBox />
    <div class="button-wrapper">
        <Button text="เสร็จสิ้น" href={`/ticket-stamp/stamp/${user_id}`} />
    </div>
  </div>
</Layout>

<style>
  .container {
    position: relative;
    width: 100%;
    height: 100vh;
    background-color: #FDE5EC;
  }

  .button-wrapper {
    position: absolute;
    top: calc(50% + 280px); /* 516px (scanner height) / 2 + some padding */
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }
</style>