---
import Layout from "../../../layouts/Layout.astro";
import Button from "../../../components/Button.astro";
import QRScanner from "../../../components/QRScanner";
const { user_id } = Astro.params;
---

<Layout title="VLVU">
	<div class="container">
		<QRScanner user_id={user_id} client:load />
		<div class="button-wrapper">
			<Button text="Done" href={`/ticket-stamp/stamp/${user_id}`} />
		</div>
	</div>
</Layout>

<style>
	.container {
		position: relative;
		width: 100%;
		height: 100vh;
		background-image: url("/scanbackground.webp");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}
	.button-wrapper {
		position: absolute;
		top: calc(50% + 280px);
		left: 50%;
		transform: translateX(-50%);
		z-index: 10;
	}
</style>
