---
import Image from "astro/components/Image.astro";
---

<div class="absolute w-full max-w-md h-auto top-[786px] px-2">
  <Image
    src="/images/belle.webp"
    width={117}
    height={137}
    alt="Belle"
    class=""
  />
</div>

<div class="h-auto w-full z-10">
  <h1 class="text-[32px] mx-[35px]">Mini Games</h1>

  <!-- Ticket Game -->
  <div class="flex flex-col mt-[29px] gap-3">
    <div class="flex w-full justify-center items-center gap-8">
      <div class="text-2xl text-center text-[#454545] leading-tight">
        <h2>Customize</h2>
        <h2>My Ticket</h2>
      </div>
      <Image
        src="/images/customize.webp"
        width={96}
        height={128}
        alt="Customize My Ticket"
        class="bg-gray-300 text-center ml-8"
      />
    </div>
    <div class="w-full flex justify-end pr-20">
      <a
        href=""
        class="text-xl text-center text-white bg-[#C55A5E] w-[215px] h-[47px] p-2"
      >
        Click to Create
      </a>
    </div>
  </div>

  <!-- Stamp game -->
  <div class="flex flex-col mt-[95px] gap-3">
    <div class="flex w-full justify-center gap-8 items-center">
      <Image
        src="/images/stamp.webp"
        width={130}
        height={130}
        alt="Collect My Stamp"
        class="bg-gray-300 text-center"
      />
      <div class="text-2xl text-center text-[#454545] leading-tight">
        <h2>My Stamp</h2>
        <h2>Collection</h2>
      </div>
    </div>
    <div class="w-full flex pl-20">
      <a
        href=""
        class="text-xl text-center text-white bg-[#C55A5E] w-[218px] h-[47px] p-2"
      >
        Click to Collect
      </a>
    </div>
  </div>

  <!-- Flower game -->
  <div class="flex flex-col mt-[95px] gap-3">
    <div class="flex w-full justify-center items-center gap-8">
      <div class="text-2xl text-center text-[#454545] leading-tight">
        <h2>Find My</h2>
        <h2>Flower</h2>
      </div>
      <Image
        src="/images/flower.webp"
        width={95}
        height={127}
        alt="Find My Flower"
        class="bg-gray-300 text-center"
      />
    </div>
    <div class="w-full flex justify-center">
      <a
        href=""
        class="text-xl text-center text-white bg-[#C55A5E] w-[215px] h-[47px] p-2"
      >
        Click to Play
      </a>
    </div>
  </div>
</div>
