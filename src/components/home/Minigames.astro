---
import Image from "astro/components/Image.astro";
---

<div class="h-auto w-full">
  <h1 class="text-4xl text-rose text-center">Mini Games</h1>

  <!-- Ticket Game -->
  <div class="flex flex-col mt-[40px] gap-3">
    <div class="flex w-full justify-center items-center gap-8">
      <div class="text-2xl text-center text-black leading-tight">
        <h2>Customize</h2>
        <h2>My Ticket</h2>
      </div>
      <Image
        src="/images/home/ticket-icon.webp"
        width={135}
        height={177}
        alt="Customize My Ticket"
        class="animate-bounce"
      />
    </div>
    <div class="w-full flex justify-end pr-20">
      <a
        href=""
        class="text-xl text-center text-white bg-periwinkleBlue shadow-xl w-[215px] h-[47px] p-2"
        onclick="alert('Coming soon!')"
      >
        Click to Create
      </a>
    </div>
  </div>

  <!-- Stamp game -->
  <div class="flex flex-col mt-[72px] gap-3">
    <div class="flex w-full justify-center gap-8 items-center">
      <Image
        src="/images/home/stamp-icon.webp"
        width={130}
        height={130}
        alt="Collect My Stamp"
        class="animate-bounce"
      />
      <div class="text-2xl text-center text-black leading-tight">
        <h2>My Stamp</h2>
        <h2>Collection</h2>
      </div>
    </div>
    <div class="w-full flex pl-20">
      <a
        href=""
        class="text-xl text-center text-white bg-periwinkleBlue w-[218px] h-[47px] p-2"
        onclick="alert('Coming soon!')"
      >
        Click to Collect
      </a>
    </div>
  </div>

  <!-- Flower game -->
  <div class="flex flex-col mt-20 gap-4">
    <div class="flex w-full justify-center items-center gap-8">
      <div class="text-2xl text-center text-black leading-tight">
        <h2>Find My</h2>
        <h2>Flower</h2>
      </div>
      <Image
        src="/images/home/flower.webp"
        width={95}
        height={127}
        alt="Find My Flower"
        class="bg-gray-300 animate-bounce"
      />
    </div>
    <div class="w-full flex justify-center">
      <a
        href=""
        class="text-xl text-center text-white bg-periwinkleBlue w-[215px] h-[47px] p-2"
        onclick="alert('Coming soon!')"
      >
        Click to Play
      </a>
    </div>
  </div>
</div>
